<% provide :title, t("views.admin.words.new.title") %>
<h1><%= t "views.admin.words.new.content" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @word] do |f| %>
      <%= render "shared/error_messages" , object: f.object %>
      <%= f.label "Category" %>
      <%= f.text_field :category_id, readonly: true, class: "form-control"%>
      <%= f.hidden_field :category_id %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <p><%= f.label :word_answers %></p>
      <%= f.fields_for :word_answers do |builder| %>
        <%= render "word_answer_fields", f: builder %>
      <% end %>

      <%= link_to_add_word_answers t("views.admin.words.new.add_more_answer"),
        f, :word_answers %>
      <div class="action">
        <%= f.submit t("views.admin.words.new.submit_button"),
          class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
