<% provide :title, t("views.admin.categories.edit.title") %>
<h1><%= t "views.admin.categories.edit.content" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages" , object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("views.admin.categories.edit.submit_button"),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
