<% provide :title, t("views.sessions.new.title") %>
<h1><%= t "views.sessions.new.content" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("views.sessions.new.submit_button"),
        class: "btn btn-primary form-control" %>
    <% end %>
    <div class="signup-suggest">
      <%= t "views.sessions.new.ask_no_account" %>
      <%= link_to t("views.sessions.new.sign_up_now"), signup_path %>
    </div>
  </div>
</div>
