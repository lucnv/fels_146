<% provide :title, t("Log_in.name") %>
<h1><%= t "Log_in.name" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label t "Log_in.email" %>
      <%= f.email_field :email, class: "form-control"%>

      <%= f.label t "Log_in.password" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("Log_in.log_in_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
