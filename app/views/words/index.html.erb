<% provide :title, t("views.words.index.title") %>
<h1><%= t "views.words.index.content" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag words_path, method: :get do %>
      <div class="form-group status-option-filter">
        <% filter_status = params[:filter] || Settings.filter_options.last %>
        <% Settings.filter_options.each do |option| %>
          <span class="status-option">
            <%= radio_button_tag :filter, option, filter_status == option %>
            <%= t "#{option}" %>
          </span>
        <% end %>
      </div>
      <div class="form-group">
        <%= label_tag :status, "Categories" %>
        <%= select_tag :category_id,
          options_for_select(Category.all.collect {|c| [c.name, c.id]},
          params[:category_id]), prompt: "All caregories", class: "form-control" %>
      </div>
      <%= submit_tag t("views.words.index.submit_filter"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t "views.words.index.table_head" %></th>
    </tr>
  </thead>
  <tbody>
  <% @words.each do |word| %>
    <tr>
      <td><%= word.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate %>
