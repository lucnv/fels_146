<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        <%= @user.email %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section class="activities_view">
      <h3><%= t "views.users.show.activities_history" %></h3>
      <% if @activities.any? %>
        <ul class="activities">
          <%= render @activities %>
        </ul>
        <%= link_to t("views.users.show.more_activities"), activities_path(@user) %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" %>
    <h3><%= t "views.users.show.lessons" %></h3>
    <%= render "shared/lessons", lessons: @lessons %>
  </div>
</div>

