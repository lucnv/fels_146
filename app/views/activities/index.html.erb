<% provide :title, t("views.activities.index.title") %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        <%= @user.email %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= t "views.activities.index.activities" %></h3>
    <% if @activities.any? %>
      <ul class="activities">
        <%= render @activities %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
